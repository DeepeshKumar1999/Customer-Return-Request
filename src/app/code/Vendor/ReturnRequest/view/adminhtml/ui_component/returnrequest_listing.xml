<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">returnrequest_listing.returnrequest_listing_data_source</item>
            <item name="deps" xsi:type="string">returnrequest_listing.returnrequest_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">return_request_listing_columns</item>
    </argument>

    <dataSource name="returnrequest_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
        <argument name="class" xsi:type="string">Vendor\ReturnRequest\Ui\DataProvider\ReturnRequest\Listing</argument>
        <argument name="name" xsi:type="string">returnrequest_listing_data_source</argument>
        <argument name="primaryFieldName" xsi:type="string">return_id</argument>
        <argument name="requestFieldName" xsi:type="string">return_id</argument>
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
            <item name="update_url" xsi:type="url" path="mui/index/render" />
            <item name="storageConfig" xsi:type="array">
                <item name="indexField" xsi:type="string">return_id</item>
            </item>
            </item>
        </argument>
        </argument>
        <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
        </item>
        </argument>
    </dataSource>

    <filters name="listing_filters">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="columnsProvider" xsi:type="string">returnrequest_listing.returnrequest_listing.return_request_listing_columns</item>
                <item name="storageConfig" xsi:type="array">
                    <item name="provider" xsi:type="string">returnrequest_listing.returnrequest_listing.listing_top.bookmarks</item>
                    <item name="namespace" xsi:type="string">current.filters</item>
                </item>
                <item name="templates" xsi:type="array">
                    <item name="filters" xsi:type="array">
                        <item name="select" xsi:type="array">
                            <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                            <item name="template" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                        </item>
                    </item>
                </item>
                <item name="childDefaults" xsi:type="array">
                    <item name="provider" xsi:type="string">returnrequest_listing.returnrequest_listing.listing_top.listing_filters</item>
                    <item name="imports" xsi:type="array">
                        <item name="visible" xsi:type="string">returnrequest_listing.returnrequest_listing.return_request_listing_columns.${ $.index }:visible</item>
                    </item>
                </item>
            </item>
            <item name="observers" xsi:type="array">
                <item name="column" xsi:type="string">column</item>
            </item>
        </argument>
    </filters>
    <massaction name="listing_massaction">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="selectProvider" xsi:type="string">returnrequest_listing.returnrequest_listing.return_request_listing_columns.ids</item>
                <item name="indexField" xsi:type="string">entity_ids</item>
            </item>
        </argument>
        <action name="new">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="type" xsi:type="string">new</item>
                    <item name="label" xsi:type="string" translate="true">New</item>
                    <item name="url" xsi:type="url" path="*/*/massnew"/>
                    <item name="confirm" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">New</item>
                        <item name="message" xsi:type="string" translate="true">Are you sure you want to update the status to new?</item>
                    </item>
                </item>
            </argument>
        </action>
        <action name="approved">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="type" xsi:type="string">approved</item>
                    <item name="label" xsi:type="string" translate="true">Approved</item>
                    <item name="url" xsi:type="url" path="*/*/massapproved"/>
                    <item name="confirm" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">Approved</item>
                        <item name="message" xsi:type="string" translate="true">Are you sure you want to update the status to approved?</item>
                    </item>
                </item>
            </argument>
        </action>
        <action name="rejected">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="type" xsi:type="string">rejected</item>
                    <item name="label" xsi:type="string" translate="true">Rejected</item>
                    <item name="url" xsi:type="url" path="*/*/massrejected"/>
                    <item name="confirm" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">Rejected</item>
                        <item name="message" xsi:type="string" translate="true">Are you sure you want to update the status to rejected?</item>
                    </item>
                </item>
            </argument>
        </action>
    </massaction>

    <columns name="return_request_listing_columns">
        <selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">return_id</item>
                </item>
            </argument>
        </selectionsColumn>
        <column name="image" class="Vendor\ReturnRequest\Ui\Component\Listing\Columns\FieldThumbnail" component="Magento_Ui/js/grid/columns/thumbnail">
            <settings>
                <label translate="true">Image</label>
            </settings>
        </column>
        <column name="return_id">
            <settings>
                <sortable>true</sortable>
                <filter>textRange</filter>
                <label translate="true">Return Id</label>
            </settings>
        </column>
        <column name="status" class="Vendor\ReturnRequest\Ui\Component\Listing\Columns\GetStatus">
            <settings>
                <sortable>true</sortable>
                <filter>text</filter>
                <label translate="true">Status</label>
            </settings>
        </column>
        <column name="order_id" class="Vendor\ReturnRequest\Ui\Component\Listing\Columns\OrderLink">
            <settings>
                <sortable>true</sortable>
                <filter>textRange</filter>
                <label translate="true">Order Id</label>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
            </settings>
        </column>
        <column name="customer_email">
            <settings>
                <sortable>true</sortable>
                <filter>text</filter>
                <label translate="true">Customer Email</label>
            </settings>
        </column>
        <column name="reason" class="Vendor\ReturnRequest\Ui\Component\Listing\Columns\GetReason">
            <settings>
                <sortable>true</sortable>
                <filter>text</filter>
                <label translate="true">Reason</label>
            </settings>
        </column>
        <column name="description">
            <settings>
                <sortable>true</sortable>
                <filter>text</filter>
                <label translate="true">Description</label>
            </settings>
        </column>
        <column name="created_at">
            <settings>
                <sortable>true</sortable>
                <filter>dateRange</filter>
                <label translate="true">Created At</label>
            </settings>
        </column>
    </columns>
</listing>